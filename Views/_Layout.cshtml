@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Web.Common;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject UmbracoHelper Umbraco

@{
    // Retrieve Global Settings Node
    // Try finding by alias at root
    var globalSettings = Umbraco.ContentAtRoot()
        .FirstOrDefault(x => x.ContentType.Alias.Equals("globalSettings", StringComparison.InvariantCultureIgnoreCase));

    // Fallback: If not at root, it might be a child of Main Root? Or try by Path if known from API "/globals"
    if (globalSettings == null)
    {
        // Try getting by path /globals
        /* 
           NOTE: Retrieving by path in Razor isn't direct on UmbracoHelper without ID.
           We'll rely on checking children of root.
        */
         globalSettings = Umbraco.ContentAtRoot().SelectMany(x => x.Children)
            .FirstOrDefault(x => x.ContentType.Alias.Equals("globalSettings", StringComparison.InvariantCultureIgnoreCase));
    }
}

