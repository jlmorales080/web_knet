@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem<HeadingTarifasBlock>>
@{
    var content = Model.Content;
}

<section class="section section--pricing-heading">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                @if (!string.IsNullOrEmpty(content.Title))
                {
                    <h2 class="section-title">@content.Title</h2>
                }
                
                @if (content.Intro != null)
                {
                    <div class="section-intro">
                        @content.Intro
                    </div>
                }
            </div>
        </div>

        @if (content.Cards != null && content.Cards.Any())
        {
            <div class="row pricing-cards">
                @await Html.PartialAsync("Partials/blocklist/default", content.Cards)
            </div>
        }
    </div>
</section>
